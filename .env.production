# ============================================
# SHORTLINKMU - PRODUCTION ENVIRONMENT
# ============================================
# Domain Frontend: https://shortlinkmu.com
# Domain Backend: https://shortlinkmu.space
# ============================================

# === APPLICATION ===
APP_NAME=ShortlinkMu
APP_ENV=production
# ⚠️ PENTING: Jalankan `php artisan key:generate` di server!
APP_KEY=base64:GENERATE_NEW_KEY_HERE
APP_DEBUG=false
APP_URL=https://shortlinkmu.space
VIEWER_URL=https://go.shortlinkmu.com
FRONTEND_URL=https://shortlinkmu.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
APP_TIMEZONE=Asia/Jakarta

# === PERFORMANCE ===
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# === LOGGING (Production: error only) ===
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# === DATABASE ===
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=shortlink_db
# ⚠️ GANTI dengan credentials database yang aman!
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_password

# === SESSION (Secure for HTTPS) ===
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
# Cookie shared across subdomains
SESSION_DOMAIN=.shortlinkmu.com
SESSION_SECURE_COOKIE=true

# === SANCTUM (API Auth) ===
# Domain yang diizinkan untuk stateful authentication
SANCTUM_STATEFUL_DOMAINS=shortlinkmu.com,www.shortlinkmu.com,shortlinkmu.space,go.shortlinkmu.com

# === QUEUE & CACHE ===
QUEUE_CONNECTION=redis
CACHE_STORE=redis
CACHE_PREFIX=shortlink_
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# === REDIS ===
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# === MAIL (SMTP Production) ===
MAIL_MAILER=smtp
# ⚠️ GANTI dengan credentials SMTP Anda!
MAIL_HOST=smtp.yourmailprovider.com
MAIL_PORT=587
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@shortlinkmu.com"
MAIL_FROM_NAME="ShortlinkMu"

# === RESEND (Optional - untuk email verification) ===
# ⚠️ Generate API key baru di https://resend.com
RESEND_API_KEY=re_GENERATE_NEW_KEY

# === GOOGLE OAUTH ===
# ⚠️ Buat credentials baru di Google Cloud Console!
# - Authorized redirect URI: https://shortlinkmu.space/api/auth/google/callback
# - Authorized origins: https://shortlinkmu.com, https://shortlinkmu.space
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
GOOGLE_REDIRECT_URI=https://shortlinkmu.space/api/auth/google/callback

# === PUSHER (Optional) ===
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=ap1
BROADCAST_DRIVER=log

# === AWS (Optional) ===
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# === BUSINESS LOGIC ===
REFERRAL_COMMISSION_PERCENTAGE=10

# === VITE ===
VITE_APP_NAME="${APP_NAME}"
